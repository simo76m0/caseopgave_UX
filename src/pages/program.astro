  <link rel="stylesheet" href="https://use.typekit.net/aqy4phb.css" />
  <link rel="stylesheet" href="https://use.typekit.net/aqy4phb.css" />
  <title>Astro</title>

  <body>
    <Navigation />
    <main>
      {data.map((program) => <ProgramCards link={"/"} tid={program.tid} img={program.img} />)}
